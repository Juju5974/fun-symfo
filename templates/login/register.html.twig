{% extends '_base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}   
    <article>
        {{ form_start(newUserForm) }}
            <h2> Inscription </h2>
            <div class="contribution justify-content-center article-section contact-wrapper">
                {{ form_errors(newUserForm) }}    
                <div class="mt-3 w-50">                   
                    {{ form_row(newUserForm.username, { 'attr': {'class': 'register-form'}, 'label': 'Pseudo :' }) }}
                </div>
                <div class="mt-3 w-50"> 
                    {{ form_row(newUserForm.email, {'attr': {'class': 'register-form'}, 'label': 'Adresse e-mail :' }) }}
                </div>
                <div class="mt-3 w-50"> 
                {{ form_row(newUserForm.password, {'attr': {'class': 'register-form'}, 'label': 'Mot de passe :' }) }}
                </div>
                <div class="div-btn-contribution div-border-top mt-3">
                    {{ form_row(newUserForm.submit, { 'attr': {'class': 'btn btn-info btn-contribute'}, 'id': 'new-user-form', 'label': 'Valider' }) }}
                </div>
            </div>
        {{ form_end(newUserForm) }}
    </article>
{% endblock %}
