{% extends '_base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <form class="contribution" action="{{ path('login') }}" method="post">
        <h2> Connexion </h2>
        <br>

        <label for="username">Adresse e-mail :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password" class="mt-2">Mot de passe :</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
        
        <button type="submit" class="btn btn-info btn-contribute mt-3">Valider</button>
        <br>
        <p>Pas encore inscrit ? <a href="{{ path('register') }}">Inscrivez-vous</a></p>
    </form>

{% endblock %}
