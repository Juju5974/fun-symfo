{% extends '_base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}
    <article>
        <div id="menu-btn">
            <i id="side-btn" class="fas fa-bars"></i>
        </div>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        <form class="" action="{{ path('login') }}" method="post">
            <h2> Connexion </h2>
            <div class="justify-content-center article-section contact-wrapper">
                <div class="contribution mt-3">
                    <label for="username">Adresse e-mail :</label>
                    <input type="text" id="username" class="input-login" name="_username" value="{{ last_username }}" placeholder="Adresse e-mail" required/>
                </div>
                <div class="contribution mt-3">
                    <label for="password" class="">Mot de passe :</label>
                    <input type="password" id="password" class="input-login" name="_password" placeholder="Mot de passe" required/>
                </div>
                <p class="small"><a href="">Mot de passe oubli√© ?</a></p>
                <div class="div-btn-contribution div-border-top mt-3">            
                    <button type="submit" class="btn btn-info btn-contribute">Valider</button>
                </div>
            </div>
            <p class="mt-3">Pas encore inscrit ? <a href="{{ path('register') }}">Inscrivez-vous</a></p>
        </form>
    </article>
{% endblock %}
